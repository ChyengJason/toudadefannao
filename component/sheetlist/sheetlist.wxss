.item {
  display: inline-block;
  text-align: center;
  width: 20%;
}
.sep {
  position: relative;
  display:flex;
  height: 130rpx;
  margin: 30rpx 30rpx 0 30rpx;
  padding-left: 30rpx;
  background: #FFFFFF;
}

.right-spread{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%)
}

.sep-top-fold {
  line-height: 130rpx;
  font-size: 35rpx;
  color: #060606;
}

.sep-top-spread {
  line-height: 130rpx;
  font-size: 35rpx;
  color: #9e9e9e;
}

.sep-contain {
  margin: 0 30rpx 0 30rpx;
  background: #FFFFFF;
}

.sep-bottom {
  margin-bottom: 30rpx;
}