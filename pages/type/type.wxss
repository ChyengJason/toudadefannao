.tip {
  text-align: center;
  background: #f5f5f5;
}

.tip-top {
  background: #fff;
  width: 100%;
  text-align: center;
  padding-top: 50rpx; 
  padding-bottom: 50rpx; 
  margin-bottom: 18rpx; 
}

.tip-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.tip-item{
  background: #fff;
  width: 100%;
  height: 120rpx;
  border: none;
  padding: 0;
  border-radius: 0;
}

.tip-item::after {
  border: none;
}

.tip-text {
  display:flex;
  align-items:center;
  width: 100%;
  height: 100%;
  padding-left: 40rpx;
  padding-right: 40rpx;
  font-size: 36rpx;
  color: #353535;
}

.right-spread{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%)
}

.divider {
  width: 100%;
  height: 1rpx;
  background: none;
}

.big-divider {
  width: 100%;
  height: 15rpx;
  background: none;
}