<view class="tip">
  <view class="tip-top">
    <button wx:if="{{!hasUserInfo && canIUse}}"  class='userinfo-btn' open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 头像 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

  <view class="switch">
    <view class="switch-left">自动换页</view>
    <switch class="switch-right" checked='{{isAutoPage}}' bindchange='tapSwitch' color="#1c87b0"></switch>
  </view>
  <view class="divider"></view>
  <view class="feedback">
    <view class="feedback-left" bindtap='tapFeedback'>吐个槽</view>
  </view>
</view>
